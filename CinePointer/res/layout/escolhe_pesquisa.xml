<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <ImageView android:src="@drawable/cinepointerlogo" android:id="@+id/imageView1" android:layout_gravity="center" android:layout_height="200dip" android:layout_width="fill_parent"></ImageView>
    <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:layout_height="wrap_content" android:id="@+id/textView1" android:text="@string/stringTituloPesquisa" android:layout_width="wrap_content" android:layout_marginTop="50dip"></TextView>
    <RadioGroup android:id="@+id/radioGroup1" android:layout_height="wrap_content" android:layout_width="fill_parent">
        <RadioButton android:text="@string/stringPesquisaPorNome" android:layout_height="wrap_content" android:checked="true" android:id="@+id/radio0" android:layout_width="fill_parent" android:layout_weight="1"></RadioButton>
        <RadioButton android:text="@string/stringPesquisaPorLocalizacao" android:layout_height="wrap_content" android:id="@+id/radio1" android:layout_width="fill_parent" android:layout_weight="1"></RadioButton>
    </RadioGroup>
    <Button android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="100dip" android:id="@+id/escolhePesquisaBotaoPesquisar" android:text="@string/labelBotaoPesquisar"></Button>
    
</LinearLayout>
